<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize theme defaultStylr -->
        <item name="android:textViewStyle">@style/defaultStyle</item>
        <item name="materialButtonStyle">@style/materialButton</item>
    </style>

    <style name="defaultStyle">
        <!-- importing colors from colors.xml -->
        <item name="android:textColor">@color/cardview_dark_background</item>

        <!-- importing dimensions from dimensions.xml -->
        <item name="android:textSize">@dimen/buttonText</item>
    </style>

    <style name="materialButton" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/voilet</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>

    </style>
</resources>